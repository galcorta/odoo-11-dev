            <!--sequence="1"/>-->

        <!--Action for Gender Pie Chart -->
        <record id="action_gender_pie_chart" model="ir.actions.client">
            <field name="name">Gender Pie Chart</field>
            <field name="tag">action_sias_chart_page</field>

        </record>
        <menuitem id="GenderPieChart" name="Gender Pie Chart" parent="sias_report_menu"
            action="action_gender_pie_chart"  sequence="1"/>

    </data>
</odoo>